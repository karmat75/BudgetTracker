# Auto-detect text files and perform LF normalization
* text=auto

# Force LF line endings for shell scripts
*.sh text eol=lf

# Force LF for Python files
*.py text eol=lf

# Force LF for JavaScript/JSX/JSON files
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# Flutter/Dart
*.dart text eol=lf
pubspec.yaml text eol=lf
pubspec.lock text eol=lf
*.lock text eol=lf
*.svg text eol=lf
*.ttf binary
*.otf binary
*.mp3 binary
*.mp4 binary
*.wav binary

# Force LF for configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Force LF for Docker and DevContainer files
Dockerfile text eol=lf
*.dockerfile text eol=lf
.dockerignore text eol=lf

# Force LF for markdown and documentation
*.md text eol=lf

# Force LF for SQL files
*.sql text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
