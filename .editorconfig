# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Python
[*.py]
indent_style = space
indent_size = 4
#max_line_length = 88

# JavaScript/JSX
[*.{js,jsx}]
indent_style = space
indent_size = 4

# JSON
[*.json]
indent_style = space
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# SQL
[*.sql]
indent_style = space
indent_size = 4
