{
    "name": "Flutter Development Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--privileged",
        "-v",
        "/dev/bus/usb:/dev/bus/usb"
    ],

    "customizations":{
        "vscode":{
            "extensions":[
                "Dart-Code.flutter",
                "github.vscode-github-actions",
                "github.copilot",
                "github.copilot-chat"
            ]
        }
    },
    "forwardPorts": [8081, 5037],
    "remoteUser": "root"
}